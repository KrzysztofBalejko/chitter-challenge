  </style>
  </head>
  <body id="background" style="background-color: #00aced">
    <br>
    <section class="col-md-4 mx-auto card">
      <br>
      <form action="/storage_users" method="post" >
        <div class="form-group">
          <h1>Registration</h1>
            <br>
            <div>
              <input type="text" name="user_name" class="form-control" placeholder="Your name">
            </div>
            <br>
          <input type="text" name="your_email" class="form-control" placeholder="Your email">
        </div>
        <div class="form-group">
          <input type="password" name="your_password" class="form-control" placeholder="Your password">
        </div>
          <p><b>Click sign up when you're ready!</b></p>
          <input type="submit" value="Sign up" class="btn btn-outline-primary btn-lg btn-block">
        <br>
      </form>
    </section>
  </body>
